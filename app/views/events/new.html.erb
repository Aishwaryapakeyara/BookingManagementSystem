<h1>Add New Event</h1>
<%= form_with model: @event do |form| %>
<div>
<%= form.label :name %>
<%= form.text_field :name%>
</div><br>
<div>
<%= form.label :start_time %>
<%= form.datetime_field :start_time%>
</div><br>
<div>
<%= form.label :end_time %>
<%= form.datetime_field :end_time%>
</div><br>
<div>
<%= form.label 'City' %>
<%= select_tag "cities", options_from_collection_for_select(City.all, "id", "name"), {:prompt => "Select City"} %>
</div><br>
<div>
<%= form.label :location_id %>
<%= collection_select(:event, :location_id, Location.all, :id, :name, {:prompt => "Select Location"}, {:disabled => true}) %>
</div><br>
<div>
<%= form.label :category_id %>
<%= collection_select(:event, :category_id, Category.all, :id, :name, {:prompt => "Select Category--"})%>
</div><br>
<div>
<%= form.submit %>
</div><br>
<% end %>
